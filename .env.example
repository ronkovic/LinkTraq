# ===========================================
# 環境変数設定 - LinkTraq
# ===========================================
# このファイルを .env.local にコピーして実際の値を設定してください
# .env.local は .gitignore に含まれているため、Git にコミットされません

# ===========================================
# アプリケーション設定
# ===========================================
# アプリケーションURL (開発環境)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 短縮リンクドメイン (開発環境)
NEXT_PUBLIC_SHORT_URL_DOMAIN=http://localhost:8787

# 環境 (development / production)
NODE_ENV=development

# ===========================================
# Supabase設定
# ===========================================
# Supabase プロジェクトURL (https://app.supabase.com でプロジェクト作成後に取得)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase 匿名キー (公開可能、クライアント側で使用)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase サービスロールキー (サーバーサイド専用、絶対に公開しない)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ===========================================
# Cloudflare R2 設定
# ===========================================
# Cloudflare アカウントID
CLOUDFLARE_ACCOUNT_ID=your-account-id

# R2 バケット名
R2_BUCKET_NAME=linktraq-images

# R2 アクセスキーID (Cloudflare Dashboard → R2 → API トークンで作成)
R2_ACCESS_KEY_ID=your-access-key-id

# R2 シークレットアクセスキー
R2_SECRET_ACCESS_KEY=your-secret-access-key

# R2 公開URL (カスタムドメイン設定後)
NEXT_PUBLIC_R2_PUBLIC_URL=https://images.linktraq.com

# ===========================================
# OpenRouter (AI) 設定
# ===========================================
# OpenRouter APIキー (サービス提供用)
# https://openrouter.ai/keys で取得
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# デフォルトAIモデル
DEFAULT_AI_MODEL=deepseek/deepseek-v3.1:free

# ===========================================
# X (Twitter) API 設定 (開発・テスト用)
# ===========================================
# 注意: 本番環境ではユーザーが各自のAPI Keyを登録します
# これは開発・テスト用の設定です

# X API Key (https://developer.x.com で取得)
X_API_KEY=your-x-api-key

# X API Secret
X_API_SECRET=your-x-api-secret

# X Bearer Token
X_BEARER_TOKEN=your-x-bearer-token

# ===========================================
# Cloudflare Workers 設定
# ===========================================
# これらの変数は wrangler.toml および wrangler secret で管理します
# ここではドキュメントとして記載

# Workers 環境変数:
# - ENVIRONMENT (production / staging / development)
# - SUPABASE_URL
# - SUPABASE_SERVICE_ROLE_KEY

# Workers Secrets (wrangler secret put コマンドで設定):
# - OPENROUTER_API_KEY
# - R2_ACCESS_KEY_ID
# - R2_SECRET_ACCESS_KEY

# ===========================================
# セキュリティ・認証
# ===========================================
# JWT Secret (セッション管理用、ランダムな文字列を生成)
JWT_SECRET=your-random-jwt-secret-here

# セッション有効期限 (秒)
SESSION_MAX_AGE=604800

# ===========================================
# 通知・メール (将来実装)
# ===========================================
# Resend API Key (メール通知用)
# RESEND_API_KEY=re_your-api-key

# SendGrid API Key (代替)
# SENDGRID_API_KEY=SG.your-api-key

# ===========================================
# 監視・ログ
# ===========================================
# Sentry DSN (エラートラッキング)
# SENTRY_DSN=https://your-sentry-dsn

# ログレベル (debug / info / warn / error)
LOG_LEVEL=info

# ===========================================
# 開発ツール
# ===========================================
# データベースマイグレーション
# DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# ===========================================
# 外部サービス (将来実装)
# ===========================================
# Stripe (課金システム)
# STRIPE_SECRET_KEY=sk_test_your-stripe-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Instagram Graph API
# INSTAGRAM_APP_ID=your-instagram-app-id
# INSTAGRAM_APP_SECRET=your-instagram-app-secret

# Facebook Graph API
# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret
